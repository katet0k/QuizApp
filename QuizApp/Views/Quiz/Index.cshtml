@model QuizApp.Models.Question

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container mt-5">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">@Model.Text</h3>

                <form asp-action="Index" method="post">
                    <div class="form-group">
                        @for (int i = 0; i < Model.Options.Count; i++)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="radio" id="option-@i" name="selectedAnswer" value="@i" required />
                                <label class="form-check-label" for="option-@i">
                                    @Model.Options[i]
                                </label>
                            </div>
                        }
                    </div>

                    <button type="submit" name="action" value="Next" class="btn btn-custom">Next</button>
                    <button type="submit" name="action" value="Finish" class="btn btn-danger-custom">Finish Quiz</button>
                </form>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/popper.js/dist/umd/popper.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
